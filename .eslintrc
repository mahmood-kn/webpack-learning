{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["bundle.*.js"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-control-regex": "off",
        "no-cond-assign": "off",
        "no-prototype-builtins": "off",
        "no-empty": "off",
        "no-useless-escape": "off",
        "no-self-assign": "off",
        "no-fallthrough": "off",
        "no-sparse-arrays": "off"
      }
    }
  ]
}
